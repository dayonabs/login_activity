<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    tools:context=".Login">


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="27dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/login"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"
        android:layout_alignStart="@+id/tv_login"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/username"
        android:textColor="#E91E63"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username"
        android:layout_alignStart="@+id/tv_username"
        android:autofillHints=""
        android:ems="17"
        android:inputType=""
        tools:ignore="LabelFor" />


    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/password"
        android:textColor="#E91E63"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_password"
        android:layout_alignStart="@+id/tv_password"
        android:autofillHints="MYMY"
        android:ems="17"
        android:inputType="textPassword"
        tools:ignore="LabelFor" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:ems="12"
        android:fontFamily="@font/audiowide"
        android:text="@string/login"
        android:textColor="#E91E63"
        app:backgroundTint="#455A64" />


</RelativeLayout>
